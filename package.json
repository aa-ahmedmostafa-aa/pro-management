{
  "name": "barista",
  "version": "1.0.0",
  "description": "Service to manage and prepare coffee",
  "main": "app.js",
  "scripts": {
    "build": "npx tsc",
    "start": "nodemon --exec ts-node src/app.ts",
    "start:prod": "NODE_ENV=prod && pm2 delete fms; pm2 start --name fms \"npx ts-node --transpile-only src/app.ts\"",
    "migrate-and-start": "npm run build && npx typeorm-ts-node-commonjs migration:run -d ./src/config/db/index.ts && npm run start",
    "migration:generate": "cross-var npx typeorm-ts-node-commonjs migration:generate ./src/config/db/migrations/$npm_config_name -d ./src/config/db/index.ts",
    "migration:run": "npm run build && npx typeorm-ts-node-commonjs migration:run --dataSource ./src/config/db/index.ts",
    "migrate": "bash migrate.sh",
    "domain:generate": "bash domain.sh"
  },
  "author": "Mina H Elias",
  "license": "ISC",
  "dependencies": {
    "@babel/preset-env": "^7.19.1",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express-fileupload": "^1.4.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/nodemailer": "^6.4.7",
    "@types/randomstring": "^1.1.8",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "detect-browser": "^5.3.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.19",
    "path": "^0.12.7",
    "path-type": "^5.0.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "randomstring": "^1.2.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.5.0",
    "tsoa": "^4.1.3",
    "typeorm": "^0.3.2",
    "typeorm-extension": "^2.1.10",
    "typeorm-model-generator": "^0.4.6",
    "validatorjs": "^3.22.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.6",
    "@types/node": "^18.7.18",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.6",
    "@types/validatorjs": "^3.15.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.37.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  }
}
